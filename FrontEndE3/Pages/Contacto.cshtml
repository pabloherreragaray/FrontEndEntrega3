@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FrontEndE3.Pages.ContactoModel
@{
    ViewData["Title"] = "Contáctenos";
    Layout = "_Layout";
}

<br />
<div class="row">
    <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="card">
            <div class="card-header" style="text-align: center;">
                <h3>Contáctenos</h3>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-12">
                        <label for="txNombre">Su nombre:</label>
                        <input type="text" class="form-control" id="txNombre">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <label for="txCelular">Su celular:</label>
                        <input type="text" class="form-control" id="txCelular">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <label for="txCorreo">Su correo:</label>
                        <input type="text" class="form-control" id="txCorreo">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <label for="txMensaje">Mensaje:</label>
                        <textarea class="form-control" id="txMensaje"></textarea>
                    </div>
                </div>

            </div>
            <div class="card-footer" style="text-align: center;">
                <a href="" class="btn btn-secondary">Enviar</a>
            </div>
        </div>
    </div>
</div>
<br />