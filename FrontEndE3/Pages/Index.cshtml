@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FrontEndE3.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<div id="app">
    <img src="/images/portada3.png" style="width: 100%;">
    <hr>
    <h2>Productos destacados</h2>
    <div id="zonaproductos">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-4 col-lg-3 producto" v-for="p in destacados">
                <a v-on:click="mostrarProducto(p)">
                    <img v-bind:src="p.imagen">
                    <div class="tituloProducto">{{p.nombre}}</div>
                </a>
                <a class="precioproducto">
                    <ion-icon name="cart-outline" style="float: left;"></ion-icon>
                    <span>$ {{p.precio.toLocaleString()}}</span>
                </a>
            </div>
        </div>
    </div>
    <hr>

    <div class="modal" id="modalProducto">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">{{modal.nombre}}</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">

                    <img v-bind:src="modal.imagen" style="width: 100%;" />

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(() => {
        globalThis.app = crearAppHome();
    })
</script>
