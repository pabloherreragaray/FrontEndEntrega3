@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FrontEndE3.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<br />
<div class="row">
    <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="card">
            <div class="card-header" style="text-align: center;">
                <h3>Acceso de administrador</h3>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-12">
                        <label for="txNombreUsuario">Nombre de usuario:</label>
                        <input type="text" class="form-control" id="txNombreUsuario">
                    </div>
                    <div class="col-12">
                        <label for="txContrasena">Contraseña:</label>
                        <input type="password" class="form-control" id="txContrasena">
                    </div>
                </div>

            </div>
            <div class="card-footer" style="text-align: center;">
                <a href="" class="btn btn-secondary">Acceder</a>
            </div>
        </div>
    </div>
</div>
<br />